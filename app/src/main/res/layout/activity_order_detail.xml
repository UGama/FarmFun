<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="#ffffff">

    <include
        android:id="@+id/topBar"
        layout="@layout/bar_simpletop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.gama.farm_fun.ObservableScrollView
        android:id="@+id/observableScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/cutLine1"
                android:layout_marginStart="20dp"
                android:text="@string/test"
                android:textSize="16sp"
                android:textColor="@color/colorTextGray"
                />

            <ImageView
                android:id="@+id/cutLine1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/project_name"
                android:layout_marginTop="10dp"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/orderRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cutLine1"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/cutLine2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/orderRecyclerView"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/total_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_account"
                android:textSize="12sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toStartOf="@id/yuan"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@id/total_price"
                />
            <TextView
                android:id="@+id/yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symbol_yuan"
                android:textSize="12sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toStartOf="@id/total_price"
                app:layout_constraintBottom_toBottomOf="@id/total_price"
                android:layout_marginEnd="10dp"

                />
            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="@string/test"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cutLine2"
                app:layout_constraintBottom_toBottomOf="@id/cutLine3"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="15dp"
                />

            <ImageView
                android:id="@+id/cutLine3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine2"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="60dp"
                />

            <include
                android:id="@+id/panel_remark"
                layout="@layout/panel_remark"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/cutLine3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <ImageView
                android:id="@+id/cutLine4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/panel_remark"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/cutLine4"
                app:layout_constraintBottom_toBottomOf="@id/cutLine5"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cutLine4"
                app:layout_constraintBottom_toBottomOf="@id/cutLine5"
                android:layout_marginEnd="20dp"
                android:text="@string/payment_online"
                android:textColor="@color/colorTextGray"
                android:textSize="14sp"
                />
            <ImageView
                android:id="@+id/cutLine5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine4"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/cutLine5"
                app:layout_constraintBottom_toBottomOf="@id/cutLine6"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/cutLine5"
                app:layout_constraintBottom_toBottomOf="@id/cutLine6"
                />

            <ImageView
                android:id="@+id/cutLine6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine5"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/cutLine6"
                app:layout_constraintBottom_toBottomOf="@id/cutLine7"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/cutLine6"
                app:layout_constraintBottom_toBottomOf="@id/cutLine7"
                />

            <ImageView
                android:id="@+id/cutLine7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine6"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/cutLine7"
                app:layout_constraintBottom_toBottomOf="@id/cutLine8"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/cutLine7"
                app:layout_constraintBottom_toBottomOf="@id/cutLine8"
                />

            <ImageView
                android:id="@+id/cutLine8"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine7"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/cutLine8"
                app:layout_constraintBottom_toBottomOf="@id/cutLine9"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/cutLine8"
                app:layout_constraintBottom_toBottomOf="@id/cutLine9"
                />

            <ImageView
                android:id="@+id/cutLine9"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine8"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                />

            <Button
                android:id="@+id/comment"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_button"
                android:textColor="#ffffff"
                android:text="去评论"
                app:layout_constraintTop_toBottomOf="@id/cutLine9"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                />

            <Button
                android:id="@+id/refund"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_button"
                android:textColor="#ffffff"
                android:text="申请退房"
                app:layout_constraintTop_toBottomOf="@id/cutLine9"
                app:layout_constraintEnd_toStartOf="@id/comment"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:visibility="invisible"
                />

        </android.support.constraint.ConstraintLayout>

    </com.gama.farm_fun.ObservableScrollView>



    <ImageView
        android:id="@+id/shelter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:alpha="0.4"
        android:visibility="invisible"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/panel_confirm"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:background="@drawable/shape_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.3"
            android:text="是否确定要申请退订？\n（退款将在三个工作日内按原路退还账户）"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:textSize="14sp"
            />

        <Button
            android:id="@+id/confirm"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_button"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:text="确定"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:id="@+id/cancel"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/shape_button"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:text="取消"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            />

        <include
            android:id="@+id/loading"
            layout="@layout/panel_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            />

    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>