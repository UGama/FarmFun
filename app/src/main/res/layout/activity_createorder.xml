<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="#ffffff">

    <include 
        android:id="@+id/topBar"
        layout="@layout/bar_simpletop" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <com.gama.farm_fun.ObservableScrollView
        android:id="@+id/observableScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/cutLine1"
                android:layout_marginStart="20dp"
                android:text="@string/test"
                android:textSize="14sp"
                android:textColor="@color/colorTextGray"
                />

            <ImageView
                android:id="@+id/cutLine1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/orderRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cutLine1"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/cutLine2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/orderRecyclerView"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/total_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_account"
                android:textSize="12sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toStartOf="@id/yuan"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@id/total_price"
                />
            <TextView
                android:id="@+id/yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/symbol_yuan"
                android:textSize="12sp"
                android:textColor="#000000"
                app:layout_constraintEnd_toStartOf="@id/total_price"
                app:layout_constraintBottom_toBottomOf="@id/total_price"
                android:layout_marginEnd="5dp"

                />
            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRemind"
                android:textSize="24sp"
                android:text="@string/test"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cutLine2"
                app:layout_constraintBottom_toBottomOf="@id/cutLine3"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="15dp"
                />
            
            <ImageView
                android:id="@+id/cutLine3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine2"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="60dp"
                />

            <include
                android:id="@+id/panel_remark"
                layout="@layout/panel_remark"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/cutLine3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <ImageView
                android:id="@+id/cutLine4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/panel_remark"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/cutLine4"
                app:layout_constraintBottom_toBottomOf="@id/cutLine5"
                android:layout_marginStart="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cutLine4"
                app:layout_constraintBottom_toBottomOf="@id/cutLine5"
                android:layout_marginEnd="20dp"
                android:text="@string/payment_online"
                android:textColor="@color/colorTextGray"
                android:textSize="14sp"
                />
            <ImageView
                android:id="@+id/cutLine5"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine4"
                android:background="@color/colorLineGray"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/time_come"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine5"
                android:background="#ffffff"
                android:visibility="invisible"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到店时间"
                    android:textColor="@color/colorTextGray"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/cutLine9"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="14：00后到店"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="2dp"
                    />

                <ImageView
                    android:id="@+id/cutLine9"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/colorLineGray"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/countChose"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine5"
                android:background="#ffffff"
                android:visibility="invisible"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/count"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/cutLine6"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/shape_circle"
                    android:src="@drawable/plus"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    />
                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/plus"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="@string/test"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="2dp"
                    />
                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/count"
                    android:background="@drawable/shape_circle2"
                    android:src="@drawable/minus"
                    android:layout_marginEnd="25dp"
                    />

                <ImageView
                    android:id="@+id/cutLine6"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/colorLineGray"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    />

            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/addressPanel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine5"
                android:background="#ffffff"
                >

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/cutLine7"
                    android:layout_marginStart="20dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/address_text"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextGray"
                    android:text="请选择收货地址>"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    />
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/address"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@id/name"
                    app:layout_constraintEnd_toStartOf="@id/name"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    />


                <ImageView
                    android:id="@+id/cutLine7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp"
                    android:background="@color/colorLineGray"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    />

                <ImageView
                    android:id="@+id/cutLine8"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/colorLineGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </android.support.constraint.ConstraintLayout>





        </android.support.constraint.ConstraintLayout>

    </com.gama.farm_fun.ObservableScrollView>

    <include
        android:id="@+id/submit_order"
        layout="@layout/panel_submit_order"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>