<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#ffffff">


        <com.gama.farm_fun.ObservableScrollView
            android:id="@+id/observableScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#ffffff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/mainPic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/wh43pic"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:id="@+id/tip"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@color/colorTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/projectName"
                    app:layout_constraintBottom_toBottomOf="@id/projectName"
                    />
                <TextView
                    android:id="@+id/projectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tip"
                    app:layout_constraintTop_toBottomOf="@id/mainPic"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="#000000"
                    android:text="@string/test"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/projectName"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/projectName"
                    android:layout_marginTop="10dp"
                    android:text="@string/test"
                    android:singleLine="false"
                    android:textColor="@color/colorTextGray"
                    android:maxEms="20"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:id="@+id/locate_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/locate_overlay"
                    app:layout_constraintEnd_toStartOf="@id/addressText"
                    app:layout_constraintTop_toBottomOf="@id/describe"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    app:layout_constraintEnd_toStartOf="@id/address"
                    app:layout_constraintTop_toTopOf="@id/locate_icon"
                    app:layout_constraintBottom_toBottomOf="@id/locate_icon"
                    />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/locate_icon"
                    app:layout_constraintBottom_toBottomOf="@id/locate_icon"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:text="@string/test"
                    android:layout_marginStart="5dp"
                    />

                <ImageView
                    android:id="@+id/cutLine1"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/colorLineGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/locate_icon"
                    android:layout_marginTop="10dp"
                    />

                <ImageView
                    android:id="@+id/tip2"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@color/colorTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cutLine1"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tip2"
                    app:layout_constraintBottom_toBottomOf="@id/tip2"
                    app:layout_constraintStart_toEndOf="@id/tip2"
                    android:layout_marginStart="10dp"
                    android:text="@string/test"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    />
                <ImageView
                    android:id="@+id/more"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.97"
                    app:layout_constraintTop_toTopOf="@+id/seat"
                    app:layout_constraintBottom_toBottomOf="@+id/seat"
                    />
                <TextView
                    android:id="@+id/allSeatType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/seat"
                    app:layout_constraintBottom_toBottomOf="@id/seat"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextGray"
                    android:text="@string/test"
                    app:layout_constraintEnd_toStartOf="@id/more"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/seatRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/seat"
                    android:background="#ffffff"
                    />

                <ImageView
                    android:id="@+id/cutLine2"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/colorLineGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/seatRecyclerView"
                    />

                <ImageView
                    android:id="@+id/tip3"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@color/colorTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cutLine2"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@id/tip3"
                    app:layout_constraintTop_toTopOf="@id/tip3"
                    app:layout_constraintBottom_toBottomOf="@id/tip3"
                    android:layout_marginStart="10dp"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/commentRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/comment"
                    />



                <ImageView
                    android:id="@+id/cutLine3"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/colorLineGray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/commentRecyclerView"
                    />

                <ImageView
                    android:id="@+id/tip4"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@color/colorTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cutLine3"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/mapGuide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="地图导览"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/tip4"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="@id/tip4"
                    app:layout_constraintBottom_toBottomOf="@id/tip4"
                    />
                <com.baidu.mapapi.map.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toBottomOf="@id/mapGuide"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:layout_marginTop="20dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mapView"
                    android:layout_marginTop="30dp"
                    />

            </android.support.constraint.ConstraintLayout>

        </com.gama.farm_fun.ObservableScrollView>

        <include
            android:id="@+id/topBar"
            layout="@layout/bar_top"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>