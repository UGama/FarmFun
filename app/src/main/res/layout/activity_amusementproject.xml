<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <android.support.constraint.Guideline
        android:id="@+id/topGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.08"
        />
    <ImageView
        android:id="@+id/cutLine0"
        android:background="@color/colorLineGray"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/topGuideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/cinemaName"
        android:text="@string/test"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/topGuideLine"
        android:gravity="center"
        android:maxEms="15"
        android:layout_marginStart="20dp"
        />
    <ImageView
        android:src="@drawable/loading"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@id/cinemaName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/topGuideLine"
        android:layout_marginEnd="10dp"
        />

    <com.example.cinema.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topGuideLine">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/cutLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/colorLineGray"
                />
            <ImageView
                android:id="@+id/pic_shape"
                android:layout_width="52dp"
                android:layout_height="52dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/cutLine"
                android:background="@drawable/pic_shape"
                android:layout_marginStart="16dp"
                />
            <ImageView
                android:id="@+id/cinemaPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="@id/pic_shape"
                app:layout_constraintEnd_toEndOf="@id/pic_shape"
                app:layout_constraintTop_toTopOf="@id/pic_shape"
                app:layout_constraintBottom_toBottomOf="@id/pic_shape"
                android:src="@drawable/cinema_example"
                />
            <TextView
                android:id="@+id/cinemaName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/cinemaPic"
                app:layout_constraintTop_toTopOf="@id/cinemaPic"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/cinemaPic"
                app:layout_constraintVertical_bias="0.3"
                android:maxEms="15"
                />
            <TextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textColor="@color/colorTextGray"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxEms="16"
                app:layout_constraintTop_toBottomOf="@id/cinemaName2"
                app:layout_constraintStart_toStartOf="@id/cinemaName2"
                />
            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/position"
                app:layout_constraintBottom_toBottomOf="@id/position"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                />

            <include
                layout="@layout/screenings_panel"
                android:id="@+id/midPanel"
                android:layout_height="100dp"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/cutLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <ImageView
                android:id="@+id/cutLine2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLineGray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/midPanel"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/screeningsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cutLine2"
                android:background="#ffffff"
                />

        </android.support.constraint.ConstraintLayout>

    </com.example.cinema.ObservableScrollView>

    <include
        layout="@layout/panel_project"
        android:id="@+id/topPanel"
        android:layout_height="100dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/topGuideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/cutLine00"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLineGray"
        app:layout_constraintTop_toBottomOf="@+id/topPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>