<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:frecso="http://schemas.android.com/tools"
    android:background="@color/colorWhite">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shadow"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <ImageView
            android:id="@+id/project_pic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/online_order"
            />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/project_pic"
            android:layout_marginStart="10dp"
            android:text="线上商城"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/project_pic"
            app:layout_constraintBottom_toBottomOf="@+id/project_pic"
            android:maxLength="12"
            />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/more"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="@id/project_name"
            app:layout_constraintBottom_toBottomOf="@id/project_name"
            android:textColor="@color/colorTextGray"
            android:text="@string/test"
            />
        <ImageView
            android:id="@+id/more"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/status"
            app:layout_constraintBottom_toBottomOf="@id/status"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:id="@+id/cutLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorLineGray"
            app:layout_constraintTop_toBottomOf="@id/project_pic"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            />

       <android.support.v7.widget.RecyclerView
           android:id="@+id/itemsRecyclerView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toBottomOf="@id/cutLine"
           android:layout_marginTop="10dp"
           app:layout_constraintStart_toStartOf="parent"
           />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemsRecyclerView"
            android:text="@string/test"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/symbol_yuan"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/price"
            app:layout_constraintBottom_toBottomOf="@id/price"
            android:layout_marginEnd="5dp"
            />

        <Button
            android:id="@+id/comment"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toStartOf="@id/orderDetail"
            app:layout_constraintTop_toBottomOf="@id/price"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_normal_button"
            android:text="@string/comment"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/orderDetail"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="@id/price"
            app:layout_constraintTop_toBottomOf="@id/price"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_normal_button"
            android:text="详情"
            android:textColor="#000000"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/orderDetail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>