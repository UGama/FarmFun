<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <TextView
        android:id="@+id/chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        android:text="选择"
        />

    <TextView
        android:id="@+id/kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/chose"
        android:layout_marginStart="20dp"
        android:text="重量 品种"
        android:textSize="12sp"
        android:textColor="@color/colorTextGray"
        app:layout_constraintTop_toTopOf="@id/chose"
        />

    <TextView
        android:id="@+id/all_kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@id/kind"
        android:text="@string/test"
        android:textSize="12sp"
        android:textColor="@color/colorTextGray"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/kindRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/kind"
        app:layout_constraintTop_toBottomOf="@id/kind"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        />

</android.support.constraint.ConstraintLayout>