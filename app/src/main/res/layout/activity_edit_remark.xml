<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <include android:id="@+id/topBar"
        layout="@layout/bar_simpletop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:layout_marginTop="10dp"
        android:hint="@string/input_remark"
        android:textColorHint="@color/colorTextGray"
        android:textColor="#000000"
        android:gravity="top"
        android:maxEms="10"
        android:maxLength="120"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shape_login_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/remark"
        app:layout_constraintBottom_toBottomOf="@id/remark"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />


</android.support.constraint.ConstraintLayout>