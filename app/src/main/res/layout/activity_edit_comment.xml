<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:frecso="http://schemas.android.com/tools"
    android:background="@color/colorTheme">

    <include
        android:id="@+id/bar_top"
        layout="@layout/bar_simpletop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/informationPanel"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar_top"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_common"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/project_pic"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            frecso:placeholderImage="@drawable/placeholder"
            frecso:placeholderImageScaleType="fitCenter"
            />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/project_pic"
            android:layout_marginStart="10dp"
            android:text="@string/test"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/project_pic"
            app:layout_constraintBottom_toBottomOf="@+id/project_pic"
            />

        <ImageView
            android:id="@+id/cutLine"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorLineGray"
            app:layout_constraintTop_toBottomOf="@id/project_pic"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            />

        <TextView
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cutLine"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="@string/test"
            android:textColor="#000000"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/item"
            app:layout_constraintBottom_toBottomOf="@id/item"
            app:layout_constraintStart_toEndOf="@id/item"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="@color/colorTextGray"
            android:text="@string/test"
            />
        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/item"
            app:layout_constraintStart_toStartOf="@id/item"
            android:textColor="@color/colorTextGray"
            android:textSize="12sp"
            android:text="@string/test"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/count"
            android:layout_marginTop="10dp"
            android:text="评价:"
            android:textColor="#000000"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintEnd_toStartOf="@id/star2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:background="@drawable/star"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintEnd_toStartOf="@id/star3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:background="@drawable/star"
            android:layout_marginEnd="10dp"
            />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:background="@drawable/star"
            />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toEndOf="@id/star3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:background="@drawable/star"
            android:layout_marginStart="10dp"
            />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintStart_toEndOf="@id/star4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="15dp"
            android:background="@drawable/star"
            android:layout_marginStart="10dp"
            />


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/edit_comment_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/informationPanel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_common"
        >

        <ImageView
            android:id="@+id/pen"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="写下你对这次服务的评价吧："
            app:layout_constraintStart_toEndOf="@id/pen"
            app:layout_constraintBottom_toBottomOf="@id/pen"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pen"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_comment_edit"
            />
        <EditText
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="不超过140字"
            android:textColorHint="@color/colorTextGray"
            android:gravity="top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pen"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:singleLine="false"
            android:maxEms="20"
            />

        <TextView
            android:id="@+id/word_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/comment"
            app:layout_constraintEnd_toEndOf="@id/comment"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="/140"
            />
        <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/word_limit"
            app:layout_constraintBottom_toBottomOf="@id/word_limit"
            android:text="0"
            android:textColor="#000000"
            android:textSize="12sp"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>