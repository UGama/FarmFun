<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:frecso="http://schemas.android.com/tools"
    android:background="#ffffff">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        frecso:placeholderImage="@drawable/placeholder"
        frecso:placeholderImageScaleType="fitCenter"
        />

    <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pic"
        app:layout_constraintTop_toTopOf="@id/pic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="@string/test"
        android:textColor="#000000"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item"
        app:layout_constraintBottom_toBottomOf="@id/item"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:textSize="12sp"
        android:textColor="@color/colorTextGray"
        android:text="@string/test"
        />
    <TextView
        android:id="@+id/kind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item"
        app:layout_constraintStart_toStartOf="@id/item"
        android:textColor="@color/colorTextGray"
        android:textSize="12sp"
        android:text="@string/test"
        android:layout_marginTop="5dp"
        />

</android.support.constraint.ConstraintLayout>