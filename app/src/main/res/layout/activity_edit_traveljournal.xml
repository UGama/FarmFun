<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:frecso="http://schemas.android.com/tools"
    android:background="@color/colorTheme">

    <include
        android:id="@+id/bar_top"
        layout="@layout/bar_simpletop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/titlePanel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bar_top"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_common"
        >
        <ImageView
            android:id="@+id/titleIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="3dp"
            />
        <EditText
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/titleIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleIcon"
            app:layout_constraintBottom_toBottomOf="@id/titleIcon"
            android:hint="请输入文章的标题～"
            android:textColorHint="@color/colorTextGray"
            android:textColor="#000000"
            android:layout_marginStart="3dp"
            />
        <Button
            android:id="@+id/clearTitle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleIcon"
            app:layout_constraintBottom_toBottomOf="@id/titleIcon"
            android:visibility="invisible"
            />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/subtitlePanel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlePanel"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_common"
        >

        <ImageView
            android:id="@+id/subtitleIcon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="3dp"
            />
        <EditText
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/subtitleIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/subtitleIcon"
            app:layout_constraintBottom_toBottomOf="@id/subtitleIcon"
            android:hint="请输入文章的副标题～"
            android:textColorHint="@color/colorTextGray"
            android:textColor="#000000"
            android:layout_marginStart="3dp"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/clearSubtitle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/clear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/subtitleIcon"
            app:layout_constraintBottom_toBottomOf="@id/subtitleIcon"
            android:visibility="invisible"
            />



    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/edit_journal_panel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/subtitlePanel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_common"
        >

        <ImageView
            android:id="@+id/pen"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/star_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp"
            android:text="游记正文："
            app:layout_constraintStart_toEndOf="@id/pen"
            app:layout_constraintBottom_toBottomOf="@id/pen"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pen"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_comment_edit"
            />

        <EditText
            android:id="@+id/journal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="写下你对此次楠溪江之行的游玩体验吧～"
            android:textColorHint="@color/colorTextGray"
            android:gravity="top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pen"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:singleLine="false"
            android:maxEms="20"
            />

        <TextView
            android:id="@+id/word_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/journal"
            app:layout_constraintEnd_toEndOf="@id/journal"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="/1000"
            />

        <TextView
            android:id="@+id/word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/word_limit"
            app:layout_constraintBottom_toBottomOf="@id/word_limit"
            android:text="0"
            android:textColor="#000000"
            android:textSize="12sp"
            />

        <!--<com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/testPic"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:layout_constraintStart_toStartOf="@id/journal"
            app:layout_constraintBottom_toBottomOf="@id/journal"
            frecso:placeholderImage="@drawable/placeholder"
            frecso:placeholderImageScaleType="fitCenter"
            android:layout_marginBottom="10dp"
            />-->

        <!--<ImageView
            android:id="@+id/add_pic"
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:layout_constraintStart_toStartOf="@id/journal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_add_pic"
            android:src="@drawable/add"
            />-->

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chosenPicRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        />

    <include
        android:id="@+id/loading"
        layout="@layout/panel_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />

</android.support.constraint.ConstraintLayout>