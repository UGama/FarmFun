<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="@drawable/shadow">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        fresco:placeholderImage="@drawable/placeholder"
        fresco:placeholderImageScaleType="fitCenter"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/test"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/pic"
        app:layout_constraintTop_toTopOf="@id/pic"
        app:layout_constraintBottom_toBottomOf="@id/pic"
        android:layout_marginStart="10dp"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/pic"
        app:layout_constraintBottom_toTopOf="@id/addressText"
        android:background="@color/colorLineGray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/navigation"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/pic"
        android:text="地址:"
        android:textSize="15sp"
        android:textColor="@color/colorTextGray"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/addressText"
        app:layout_constraintTop_toTopOf="@id/addressText"
        android:textSize="15sp"
        android:text="@string/test"
        android:textColor="@color/colorTextGray"
        android:singleLine="false"
        android:maxEms="12"
        android:layout_marginStart="5dp"
        />
    <Button
        android:id="@+id/navigation"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="导航"
        android:textColor="#ffffff"
        />


</android.support.constraint.ConstraintLayout>